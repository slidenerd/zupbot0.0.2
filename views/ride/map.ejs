                    <div class="col-xs-6"><%=cab_type%></div>
                </div>
                <div class="row">
                    <div class="col-xs-6">Vehicle Number</div>
                    <div class="col-xs-6"><%=cab_number%></div>
                </div>
                <div class="row" id="cancelRow">
                    <div class="col-xs-12 text-center">
                        <button type="button" class="btn btn-white" id="cancelRide">Cancel Ride</button>
                    </div>
                </div>
                </div>
                </div>
        </div>
    </div>â€‹

    <div id="cancelalert" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <h4 class="modal-title alert-title">Cancel Uber?</h4>
            <div class="modal-body">
                <p>Are you sure you want to cancel your ride?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="cancelRide()">Cancel Uber</button>
            </div>                                        
        </div>
    </div>
    </div>            


</body>
    <script>
        function cancelRide() {
            $('#cancelalert').modal('show');
            $.ajax({
                url: "/api/ride/cancel?request_id=<%=request_id%>",
                dataType: 'json',
            }).done(function(result) {
                console.log(result.status);
                window.history.back();
            });
        }

        $("#menu").click(function() {
            if($(".infoBox").hasClass('hide1')) {
                 $(".infoBox").animate({height:150},200).removeClass('hide1');
                 $("#infoDiv").show()
            } else { 
                $(".infoBox").animate({height:20},200).addClass('hide1');
                $("#infoDiv").hide()
            }
        });

        $("#cancelRide").click(function() {
            $('#cancelalert').modal('show');
        });

        var checkStatus = function() {
            $.ajax({
                url: "/api/ride/status?request_id=<%=request_id%>",
                dataType: 'json',
            }).done(function(result) {
                console.log(result.status);
                if(result.status != 'arriving' && result.status != 'accepted') {
                    $("#cancelRow").hide();
                } 
                if(result.status == 'completed') {
                    window.location = '/api/ride/receipt?request_id=<%=request_id%>'
                }
            });
            setTimeout(checkStatus, 5000);     
        }
        checkStatus();
    </script>
